{
  // Editor settings
  "editor.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 18,
  "editor.lineHeight": 1.4,
  "editor.fontLigatures": "'calt', 'ss01'",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  // "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "phase",
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.smoothScrolling": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.codeActionsOnSave": {
    // remove unused imports on save
    // "source.organizeImports": true,
    // format on save
    "source.fixAll": true
  },
  // turn off formatting for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "prettier.documentSelectors": [
    "**/*.astro"
  ],
  // File settings
  "files.trimTrailingWhitespace": true,
  // Terminal settings
  "terminal.integrated.fontFamily": "MesloLGM NF",
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.rendererType": "canvas",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "workbench.iconTheme": "bearded-icons",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 6,
  "workbench.sideBar.location": "right",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": false,
  "security.workspace.trust.untrustedFiles": "open",
  // IntelliSense Settings
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // Git settings
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  // Launch settings
  "launch": {
    "configurations": [],
    "compounds": []
  },
  // Markdown settings
  "markdown.preview.fontSize": 16,
  "markdown.preview.fontFamily": "Cascadia Code",
  "markdown.preview.typographer": true,
  // EXTENSION SETTINGS
  // ESLint settings
  "eslint.alwaysShowStatus": true,
  // Live server settings
  "liveServer.settings.donotShowInfoMsg": true,
  // github copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "html": true,
    "css": true,
    "scss": true,
    "javascript": true
  },
  // Fig settings
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  // Error lens settings
  "errorLens.enabled": true,
  // Emmet settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // CSS Var extension
  "cssvar.files": [
    "./node_modules/open-props/open-props.min.css",
    // if you have an alternative path to where your styles are located
    // you can add it in this array of files
    "assets/styles/variables.css"
  ],
  // you can also add support for autocomplete in other file extensions
  "cssvar.extensions": [
    "css",
    "jsx",
    "tsx"
  ],
  // to do-tree extension settings
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "MAYBE"
  ],
  "todo-tree.highlights.highlightDelay": 300,
  "todo-tree.highlights.useColourScheme": true,
  // smaller hint at wrong spelling and takes spelling mistakes out of the Problems panel.
  "cSpell.diagnosticLevel": "Hint",
  "turboConsoleLog.includeFileNameAndLineNum": false,
  "search.searchOnType": false,
  "workbench.startupEditor": "none",
  "redhat.telemetry.enabled": false,
  "liveServer.settings.donotVerifyTags": true,
  "terminal.external.osxExec": "Warp.app",
  "workbench.editor.labelFormat": "short",
  "terminal.integrated.fontSize": 15,
  "tailwindCSS.experimental.configFile": null,
  "workbench.colorTheme": "Palenight Operator",
  "debug.disassemblyView.showSourceCode": false,
  "emmet.preferences": {},
  "files.associations": {
    "*.css": "css"
  },
  "reactSnippets.settings.importReactOnTop": false,
}
